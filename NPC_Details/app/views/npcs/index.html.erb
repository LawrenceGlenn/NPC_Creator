<p id="notice"><%= notice %></p>

<h1>Npcs</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable "race_id"%></th>
      <th><%= sortable "name"%></th>
      <th><%= sortable "nickname"%></th>
      <th><%= sortable "surname"%></th>
      <th><%= sortable "age"%></th>
      <th>ageCatigory</th>
      <th><%= sortable "alignment"%></th>
      <th><%= sortable "sex"%></th>
      <th><%= sortable "rpgclass"%></th>
      <th><%= sortable "occupation"%></th>
      <th><%= sortable "haircolor"%></th>
      <th><%= sortable "eyecolor"%></th>
      <th><%= sortable "skincolor"%></th>
      <th><%= sortable "level"%></th>
      <th><%= sortable "height"%></th>
      <th><%= sortable "weight"%></th>
      <th><%= sortable "secret"%></th>
      <th><%= sortable "notes"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @npcs.order(@sort).each do |npc| %>
      <tr>
        <td><%= npc.race.name %></td>
        <td><%= npc.name %></td>
        <td><%= %Q("#{npc.nickname}") if npc.nickname.size >0  %></td>
        <td><%= npc.surname %></td>
        <td><%= npc.age %></td>
        <td><%= npc.ageCatigory %></td>
        <td><%= npc.alignment %></td>
        <td><%= npc.sex %></td>
        <td><%= npc.rpgclass %></td>
        <td><%= npc.occupation %></td>
        <td><%= npc.haircolor %></td>
        <td><%= npc.eyecolor %></td>
        <td><%= npc.skincolor %></td>
        <td><%= npc.level %></td>
        <td><%= inchesToFeet(npc.height) %></td>
        <td><%= "#{npc.weight} lbs." %></td>
        <td><%= npc.secret %></td>
        <td><%= npc.notes %></td>
        <td><%= link_to 'Show', npc %></td>
        <td><%= link_to 'Edit', edit_npc_path(npc) %></td>
        <td><%= link_to 'Destroy', npc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

