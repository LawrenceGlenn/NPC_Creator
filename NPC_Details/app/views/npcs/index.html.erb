<p id="notice"><%= notice %></p>

<h1>Npcs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Nickname</th>
      <th>Surname</th>
      <th>Age</th>
      <th>Sex</th>
      <th>Haircolor</th>
      <th>Eyecolor</th>
      <th>Skincolor</th>
      <th>Notes</th>
      <th>Level</th>
      <th>Height</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @npcs.each do |npc| %>
      <tr>
        <td><%= npc.name %></td>
        <td><%= %Q("#{npc.nickname}") if npc.nickname.size >0  %></td>
        <td><%= npc.surname %></td>
        <td><%= npc.age %></td>
        <td><%= npc.sex %></td>
        <td><%= npc.haircolor %></td>
        <td><%= npc.race.eyeColor[3] %></td>
        <td><%= npc.skincolor %></td>
        <td><%= npc.notes %></td>
        <td><%= npc.level %></td>
        <td><%= inchesToFeet(npc.height) %></td>
        <td><%= "#{npc.weight} lbs." %></td>
        <td><%= link_to 'Show', npc %></td>
        <td><%= link_to 'Edit', edit_npc_path(npc) %></td>
        <td><%= link_to 'Destroy', npc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

